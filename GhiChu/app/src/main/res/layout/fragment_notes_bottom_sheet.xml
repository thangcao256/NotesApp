<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:viewBindingIgnore="true"
    android:orientation="vertical"
    app:behavior_peekHeight="40dp"
    android:background="@color/colorGray"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/img_bar"
            app:tint="@color/colorWhite"
            android:layout_gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:id="@+id/fNote1">
            <View
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/note_color_1"/>
            <ImageView
                android:id="@+id/imgNote1"
                android:layout_gravity="center"
                android:tint="@color/colorWhite"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                tools:ignore="UseAppTint" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:id="@+id/fNote2">
            <View
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/note_color_2"/>
            <ImageView
                android:id="@+id/imgNote2"
                android:layout_gravity="center"
                android:tint="@color/colorWhite"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                tools:ignore="UseAppTint" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:id="@+id/fNote4">
            <View
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/note_color_4"/>
            <ImageView
                android:id="@+id/imgNote4"
                android:layout_gravity="center"
                android:tint="@color/colorWhite"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                tools:ignore="UseAppTint" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:id="@+id/fNote5">
            <View
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/note_color_5"/>
            <ImageView
                android:id="@+id/imgNote5"
                android:layout_gravity="center"
                android:tint="@color/colorWhite"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                tools:ignore="UseAppTint" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:id="@+id/fNote6">
            <View
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/note_color_6"/>
            <ImageView
                android:id="@+id/imgNote6"
                android:layout_gravity="center"
                android:tint="@color/colorWhite"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                tools:ignore="UseAppTint" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:id="@+id/fNote7">
            <View
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/note_color_7"/>
            <ImageView
                android:id="@+id/imgNote7"
                android:layout_gravity="center"
                android:tint="@color/colorWhite"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                tools:ignore="UseAppTint" />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/edNoteTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorGray"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:text="Chọn màu sắc"
            android:inputType="text"
            android:background="@null"
            android:fontFamily="@font/manrope_bold"
            android:textSize="@dimen/_12ssp"
            android:ellipsize="end"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layoutImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/background"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image"
            android:tint="@color/colorWhite"
            tools:ignore="UseAppTint" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/edNoteTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorGray"
            android:maxLines="1"
            android:text="Chọn hình ảnh"
            android:inputType="text"
            android:background="@null"
            android:fontFamily="@font/manrope_bold"
            android:textSize="@dimen/_12ssp"
            android:ellipsize="end"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutWebUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorGray"
        android:gravity="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_link"
            android:layout_marginEnd="@dimen/_10sdp"
            app:tint="@color/colorWhite" />

        <TextView
            android:paddingStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/edNoteTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12ssp"
            android:text="Add Web Link"
            android:fontFamily="@font/manrope_bold"
            android:maxLines="1"
            android:ellipsize="end"
            />

    </LinearLayout>
</LinearLayout>